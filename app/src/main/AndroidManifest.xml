<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vlad.ticketoffice">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TicketOffice.NoActionBar">
        <activity android:name=".UserDataActivity.UserDataActivity" />
        <activity
            android:name=".TicketsActivity.TicketsActivity"
            android:parentActivityName=".MainActivity.MainActivity" />
        <activity
            android:name=".TicketBookingActivity.TicketBookingActivity"
            android:parentActivityName=".TicketsActivity.TicketsActivity" />
        <activity
            android:name=".RaceAddActivity.RaceAddActivity"
            android:parentActivityName=".MainActivity.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".MainActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>